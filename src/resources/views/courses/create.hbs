<div class='mt-4 ml-4 mr-4'>
    <h3>Create</h3>
    <form method='POST' action='/courses/store'>
        <div class='form-group'>
            <label for='description'>Course description</label>
            <input
                type='text'
                class='form-control'
                id='description'
                placeholder='Enter description'
                name='description'
            />
        </div>
        <div class='form-group'>
            <label for='description'>Course name</label>
            <input
                type='text'
                class='form-control'
                id='name'
                placeholder='Enter name'
                name='name'
            />
        </div>
        <div class='form-group'>
            <label for='description'>Course videoId</label>
            <input
                type='text'
                class='form-control'
                id='description'
                placeholder='Enter videoId'
                name='videoId'
            />
        </div>
